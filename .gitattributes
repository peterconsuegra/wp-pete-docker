# default: keep text normalized in repo
*          text=auto

# force LF on all shell-like files used inside Linux containers
*.sh       text eol=lf
*.bash     text eol=lf
*.cgi      text eol=lf
*.env      text eol=lf
*.sql      text eol=lf
*.conf     text eol=lf
Dockerfile text eol=lf
docker-compose.* text eol=lf
